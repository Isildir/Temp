<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" x:Name="MainPage" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EngineerProject.Mobile.Views.Home.CarouselComponents.UserGroups">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Wyloguj" Clicked="OnLogout" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10">
            <Label Text="Twoje grupy" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <ListView x:Name="GroupsView" ItemTapped="OnGroupSelect">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Dodaj nową grupę" Clicked="OnGroupCreateClick" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>