<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Wyszukiwarka"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EngineerProject.Mobile.Views.Home.Pages.SearchPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Wyloguj" Clicked="OnLogout" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="5">
            <Frame>
                <Entry x:Name="SearchBarEntry" TextChanged="SearchBarTextChanged" Placeholder="Wpisz wyszukiwaną frazę" />
            </Frame>
            <ScrollView>
                <StackLayout x:Name="FilteredGroups" />
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>