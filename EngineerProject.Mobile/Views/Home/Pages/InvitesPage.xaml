<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Zaproszenia"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EngineerProject.Mobile.Views.Home.Pages.InvitesPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Wyloguj" Clicked="OnLogout" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="5">
            <ScrollView>
                <StackLayout>
                    <Label Text="Zaproszenia" HorizontalOptions="Center" FontSize="Large" />
                    <StackLayout x:Name="Invites" />
                    <Label Text="Oczekujące" HorizontalOptions="Center" FontSize="Large" />
                    <StackLayout x:Name="Pending" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>