<?xml version="1.0" encoding="UTF-8"?>
<Frame Padding="10" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EngineerProject.Mobile.Views.Group.Components.Post" xmlns:controls="clr-namespace:EngineerProject.Mobile.Views.Group.Components">
    <StackLayout>
        <!--AbsoluteLayout-->
        <StackLayout x:Name="DisplayDataView">
            <Label x:Name="OldTitle" />
            <Label x:Name="OldContent" />
        </StackLayout>
        <StackLayout x:Name="EditDataView" IsVisible="false">
            <Entry x:Name="NewPostTitle" />
            <Editor x:Name="NewPostContent" />
        </StackLayout>
        <BoxView Color="LightGray"
             HeightRequest="1"
             HorizontalOptions="Fill" />
        <StackLayout Orientation="Horizontal">
            <Label x:Name="Owner" HorizontalOptions="StartAndExpand" />
            <Label x:Name="DateAdded" HorizontalOptions="End" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <controls:AppButton Text="Edytuj" x:Name="EditButton" HorizontalOptions="EndAndExpand" BackgroundColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPostEdit" />
                </Frame.GestureRecognizers>
            </controls:AppButton>
            <controls:AppButton Text="Anuluj" x:Name="AbortButton" IsVisible="false" HorizontalOptions="EndAndExpand" BackgroundColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEditionAbort" />
                </Frame.GestureRecognizers>
            </controls:AppButton>
            <controls:AppButton Text="Wyślij" x:Name="ConfirmButton" IsVisible="false" HorizontalOptions="End" BackgroundColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEditionConfirm" />
                </Frame.GestureRecognizers>
            </controls:AppButton>
        </StackLayout>
        <StackLayout x:Name="CommentsList" Margin="0" Padding="0" />
        <StackLayout Orientation="Horizontal">
            <Entry Placeholder="Komentarz..." x:Name="NewComment" HorizontalOptions="StartAndExpand" />
            <controls:AppButton Text="Wyślij" BackgroundColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCommentSubmit" />
                </Frame.GestureRecognizers>
            </controls:AppButton>
        </StackLayout>
    </StackLayout>
</Frame>