<?xml version="1.0" encoding="UTF-8"?>
<Frame BorderColor="Gray"
       CornerRadius="5"
       Padding="5,5,5,0"
       Margin="5,5,0,5"
       xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="EngineerProject.Mobile.Views.Group.Components.AppFile">
    <StackLayout>
        <Image Aspect="AspectFit" x:Name="Src" />
        <Label x:Name="FileName" FontSize="Small" />
        <StackLayout Orientation="Horizontal">
            <Label x:Name="Size" HorizontalOptions="StartAndExpand" FontSize="Micro" />
            <Label x:Name="DateAdded" HorizontalOptions="End" FontSize="Micro" />
        </StackLayout>
    </StackLayout>
</Frame>