<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Chat" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EngineerProject.Mobile.Views.Group.Components.ChatPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Wyloguj" Clicked="OnLogout" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10">
            <ScrollView x:Name="MessagesWrapper" VerticalOptions="StartAndExpand" Scrolled="OnScrollEndReached">
                <StackLayout x:Name="Messages">
                </StackLayout>
            </ScrollView>
            <StackLayout VerticalOptions="End">
                <Editor Placeholder="Wpisz swoją wiadomość" x:Name="Message" HeightRequest="80" />
                <Button Text="Wyślij" HorizontalOptions="End" Clicked="OnMessageSend" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>