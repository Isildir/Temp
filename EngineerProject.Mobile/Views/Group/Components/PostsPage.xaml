<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Posty" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EngineerProject.Mobile.Views.Group.Components.PostsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Wyloguj" Clicked="OnLogout" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView Margin="10,10,10,10" Scrolled="OnScrollEndReached">
            <StackLayout x:Name="MainLayout">
                <StackLayout x:Name="PostCreate">
                    <Entry x:Name="Title" Placeholder="Tytuł" />
                    <Editor x:Name="Description" Placeholder="Wiadomość" />
                    <Button Text="Wyślij" Clicked="OnPostCreateSubmit" />
                </StackLayout>
                <StackLayout x:Name="Posts"></StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>