<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EngineerProject.Mobile.Views.LoginPage" >
    <ContentPage.Content>
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Entry Grid.Row="0" Grid.ColumnSpan="2" x:Name="usernameEntry" Placeholder="username" />
            <Entry Grid.Row="1" Grid.ColumnSpan="2" x:Name="passwordEntry" IsPassword="true" Placeholder="password" />
            <Button Grid.Row="2" Grid.Column="0" Text="Login" Clicked="OnLoginButtonClicked" />
            <Button Grid.Row="2" Grid.Column="1" Text="Sign Up" Clicked="OnSignUpButtonClicked" />
            <Label Grid.Row="3" Grid.Column="1" x:Name="errorMessage" IsVisible="False" />
        </Grid>
    </ContentPage.Content>
</ContentPage>