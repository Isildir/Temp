<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EngineerProject.Mobile.Views.CharacterCreatePage" Padding="10,10,10,10">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout>
                    <Picker 
                            x:Name="racePicker" 
                            Title="Select a race" 
                            SelectedIndexChanged="RacePickerIndexChanged" >
                    </Picker>
                    <Picker 
                            x:Name="professionPicker" 
                            Title="Select profession" 
                            IsVisible="false"
                            SelectedIndexChanged="ProfessionPickerIndexChanged" >
                    </Picker>
                    <Label x:Name="raceSkillsSet" IsVisible="False"/>
                    <Label x:Name="raceAbilitiesSet" IsVisible="False"/>
                    <Label x:Name="professionSkillsSet" IsVisible="False"/>
                    <Label x:Name="professionAbilitiesSet" IsVisible="False"/>
                    <Button x:Name="createButton" Text="Create" Clicked="Button_Clicked" IsEnabled="False"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>